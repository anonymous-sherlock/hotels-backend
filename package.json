{
  "name": "hotel-backend",
  "version": "1.0.01",
  "description": "A hotel backend api",
  "private": true,
  "scripts": {
    "build": "pnpm clean-build && tsc --project tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node build/src/app.js",
    "dev": "ts-node-dev -r tsconfig-paths/register --transpile-only --no-notify src/app.ts",
    "push": "pnpm prisma db push",
    "pull": "pnpm prisma db pull",
    "studio": "pnpm prisma studio",
    "generate": "pnpm prisma generate",
    "clean": "rm -rf node_modules && rm -rf build",
    "clean-build": "rm -rf build",
    "postinstall": "prisma generate",
    "format:check": "prettier --check \"**/*.{ts,tsx,mdx}\" --cache"
  },
  "author": {
    "name": "Anonymous Sherlock"
  },
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "5.9.1",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.4",
    "express": "^4.18.2",
    "http-errors": "^2.0.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "1.4.5-lts.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/http-errors": "^2.0.4",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.11.19",
    "prisma": "^5.9.1",
    "ts-node-dev": "^2.0.0",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  }
}
